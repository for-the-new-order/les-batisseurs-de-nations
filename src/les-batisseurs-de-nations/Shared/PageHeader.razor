<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="pt-7">
    <MudGrid>
        <MudItem xs="12">
            <MudPaper>
                <MudBreadcrumbs Items="Items" Separator=">"></MudBreadcrumbs>
                <MudText Typo="Typo.h1" Class="mx-4">@Title</MudText>
                <MudText Class="pa-4">
                    @Description
                </MudText>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
@code{
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public List<BreadcrumbItem> Items { get; set; }
}